<div class="container">
  <h1>My Tasks</h1>
  <div class="task-list">
    <% @tasks.each do |task| %>
      <div class="task">
        <% if task.completed %>
          <i class="fas fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
       <p><%= link_to task.title, task_path(task)    %></p>
<%= link_to task_path(task), method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
  <i class="fas fa-trash-alt" style="margin-right: 10px;"></i>
<% end %>


      </div>
    <% end %>
  </div>
  <p><%= link_to "Add a new Task", new_task_path, class: "btn btn-primary" %></p>
</div>
